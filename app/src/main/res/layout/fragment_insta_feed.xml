<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/yellow_600"
        tools:context=".Fragments.ViewPagerFragments.InstaGridFragment"
        android:id="@+id/frameLayout">


    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/recyclerview_refresh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nested_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_nav_placeholder">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/insta_recyclerview"
                android:layout_width="0dp"
                android:background="@color/SIENNA"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/nested_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottom_nav_placeholder"/>

    </android.support.v4.widget.SwipeRefreshLayout>


    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:visibility="invisible" tools:ignore="MissingConstraints">


        <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabIndicatorColor="@color/EERIE_BLACK"
                app:tabIndicatorHeight="2dp"
                app:tabSelectedTextColor="@color/EERIE_BLACK"
                app:tabTextColor="@color/EERIE_BLACK2"/>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintTop_toBottomOf="@+id/appbar" android:layout_marginTop="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_middle"
                    android:minHeight="?attr/actionBarSize"
                    android:scrollbars="none">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <View
                            android:layout_width="@dimen/spacing_middle"
                            android:layout_height="0dp"/>

                    <Button
                            android:id="@+id/tab_home"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/spacing_xmlarge"
                            android:background="@drawable/tab_rounded_accent"
                            android:onClick="onButtonTabClick"
                            android:paddingLeft="@dimen/spacing_xlarge"
                            android:paddingRight="@dimen/spacing_xlarge"
                            android:text="#Battlestations"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"/>

                    <Button
                            android:id="@+id/tab_top_artists"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/spacing_xmlarge"
                            android:background="@drawable/tab_rounded_accent"
                            android:onClick="onButtonTabClick"
                            android:paddingLeft="@dimen/spacing_xlarge"
                            android:paddingRight="@dimen/spacing_xlarge"
                            android:text="TOP ARTISTS"
                            android:textColor="@android:color/white"/>


                    <Button
                            android:id="@+id/tab_top_albums"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/spacing_xmlarge"
                            android:background="@drawable/tab_rounded_accent"
                            android:onClick="onButtonTabClick"
                            android:paddingLeft="@dimen/spacing_xlarge"
                            android:paddingRight="@dimen/spacing_xlarge"
                            android:text="TOP ALBUMS"
                            android:textColor="@android:color/white"/>

                    <Button
                            android:id="@+id/tab_new_releases"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/spacing_xmlarge"
                            android:background="@drawable/tab_rounded_accent"
                            android:onClick="onButtonTabClick"
                            android:paddingLeft="@dimen/spacing_xlarge"
                            android:paddingRight="@dimen/spacing_xlarge"
                            android:text="NEW RELEASES"
                            android:textColor="@android:color/white"/>

                    <Button
                            android:id="@+id/tab_top_songs"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/spacing_xmlarge"
                            android:background="@drawable/tab_rounded_accent"
                            android:onClick="onButtonTabClick"
                            android:paddingLeft="@dimen/spacing_xlarge"
                            android:paddingRight="@dimen/spacing_xlarge"
                            android:text="TOP SONGS"
                            android:textColor="@android:color/white"/>


                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_nav_placeholder"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:labelVisibilityMode="unlabeled"
            android:visibility="invisible"
            app:itemHorizontalTranslationEnabled="true"
            app:itemIconTint="@drawable/selector_bottom_nav_tint"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            tools:layout_editor_absoluteX="51dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp">
    </android.support.design.widget.BottomNavigationView>

    <ProgressBar
            android:theme="@style/CircularProgress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/progressBar"
            android:indeterminate="true"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/recyclerview_refresh" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_nav_placeholder"
            app:layout_constraintEnd_toEndOf="@+id/recyclerview_refresh"
            app:layout_constraintStart_toStartOf="@+id/recyclerview_refresh" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>